{
  "name": "rayon_express_psql_starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "tsoa": "tsoa spec-and-routes",
    "build": "npm run tsoa && tsc && node ./dist/scripts/secrets.js",
    "setup": "npm run env:fetch && npm run prisma:pull && npm run schema-transform && npm run prisma:generate && concurrently \"nodemon server.ts\" \"nodemon -x tsoa spec-and-routes\"",
    "dev": "cross-env NODE_ENV=dev npm run setup",
    "prod": "cross-env NODE_ENV=production npm run setup",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start": "node ./dist/server.js",
    "deploy": "npm run build && gcloud app deploy",
    "watch:types": "tsc -w",
    "env:fetch": "ts-node ./scripts/secrets",
    "env:replace": "ts-node ./scripts/env-replace",
    "schema-transform": "ts-node ./scripts/schema-transform",
    "prisma:pull": "prisma db pull",
    "prisma:generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "imports": {
    "#/*": "./*"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ],
    "ext": "ts"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "@sendinblue/client": "^3.3.1",
    "@types/lodash": "^4.17.10",
    "bcrypt": "^5.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.0",
    "strip": "^3.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^22.7.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nodemon": "^3.1.7",
    "prisma": "5.20.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.5.0"
}
